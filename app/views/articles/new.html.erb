<%= turbo_frame_tag "new_article" do %>
    <% if @article.errors.any? %>
        <h2>The following errors are preventing from saving:</h2>
        <ul>
            <% @article.errors.full_messages.each do |message| %>
            <li class="article_item"> <%= message %> </li>
            <% end %>
        </ul>
    <% end %>

    <%= render "form", article: Article.new  %>
<% end %>